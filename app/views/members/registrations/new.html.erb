<div class="container takasa">
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "members/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :first_name, "名前（姓）" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      <%= f.label :last_name, "名前（名）" %>
      <%= f.text_field :last_name, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= f.label :first_name_kana, "フリガナ（セイ）" %>
      <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
      <%= f.label :last_name_kana, "フリガナ（メイ）" %>
      <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
      <%= f.text_field :postal_code, autocomplete: "postal_code" %>
    </div>

    <div class="field member-address">
      <%= f.label :address, "住所" %>
      <%= f.text_field :address, autocomplete: "address", collection: JpPrefecture::Prefecture.all, :value_method => :name, :value => "", include_blank: "都道府県" %>
      <!-- "include_blank"を記述すると、、先頭を空の選択肢に出来る。今回の場合は、"都道府県"という文字列を選択肢に追加？ -->
    </div>

    <div class="field">
      <%= f.label :phone_number, "電話番号（ハイフンなし）" %>
      <%= f.text_field :phone_number, autocomplete: "phone_number" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード（6文字以上）" %>
      <!-- <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br /> -->
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認用）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>

  <h4 style="width: 180px; background-color: #f0f6da; text-align: center;">既に登録済みの方は</h4>
  <%= link_to "こちら", new_session_path(resource_name) %>
  <span>からログインしてください。</span>

  _<!-- <%= render "members/shared/links" %> -->
</div>

