<div class="cotainer takasa">
	<div class="row">
		<%= render "public/shared/sidebar", genres: @genres %>

		<div class="col-xs-1"></div>

		<div class="col-xs-9">
			<h2>
				<i class="fas fa-cookie-bite"></i>商品一覧
				<span style="font-size: 20px;">（全<%= @quantity %>件）</span>
			</h2>
			<div class="row">
				<% @items.each do |item| %>
					<div class="box" style="float: left; margin-right: 20px;">
						<%= link_to public_item_path(item.id) do %>
							<%= attachment_image_tag item, :image, size: "170x170", fallback: "no_image.jpg" %><br>
						<% end %>
						<p><%= item.item_name %></p>
						<p>¥<%= (item.unit_price_without_tax * 1.1),floor %></p>
					</div>
				<% end %>
			</div>
			<div class="col-xs-6 col-xs-offset-4">
				<%= paginate @items %>
			</div>
		</div>
	</div>
</div>